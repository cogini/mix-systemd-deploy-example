#!/usr/bin/env bash

# Delete files on target in preparation for install
# Used in CodeDeploy for BeforeInstall

set -e

export LANG="en_US.UTF-8"

# Environment vars
# DESTDIR, prefix for target files, optional

# Config vars
DEPLOY_DIR="/srv/mix-systemd-deploy"
SERVICE_NAME="mix-systemd-deploy"

rm -rf "${DESTDIR}${DEPLOY_DIR}"

rm -f $DESTDIR/lib/systemd/system/${SERVICE_NAME}*
